@{
    ViewData["Title"] = "Welcome";
}
<div class="hero min-h-[60vh] bg-base-200 rounded-lg shadow-lg">
    <div class="hero-content text-center">
        <div class="max-w-md space-y-6">
            <h1 class="text-5xl font-bold">Welcome to JokeSphere!</h1>
            <p class="text-xl">
                Your daily dose of laughter, one random joke at a time.
            </p>
            <a asp-controller="Jokes" asp-action="Random"
               class="btn btn-primary btn-lg">
                Tell Me a Joke
            </a>
        </div>
    </div>
</div>